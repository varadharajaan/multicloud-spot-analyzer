# GCP Configuration for Spot Analyzer - EXAMPLE FILE
# Copy this to gcp-config.yaml and fill in your values
# Run utils/gcp/setup_gcp_creds.ps1 to automatically generate this file

# WARNING: The actual gcp-config.yaml contains sensitive credentials
# DO NOT commit gcp-config.yaml to source control (it's in .gitignore)

gcp:
  # GCP Project ID
  # Get from: gcloud config get-value project
  project_id: "your-project-id"
  
  # Service Account Email (auto-generated by setup script)
  service_account_email: "spot-analyzer@your-project-id.iam.gserviceaccount.com"
  
  # Service Account JSON Key
  # Option 1: Inline JSON (single line, generated by setup script)
  service_account_json: '{"type":"service_account","project_id":"your-project",...}'
  
  # Option 2: Path to JSON key file (alternative to inline)
  # service_account_key_file: "/path/to/keyfile.json"
  
  # Enabled features
  features:
    # Use Compute Engine API for real zone availability
    # Requires: roles/compute.viewer
    compute_api: true
    
    # Use Cloud Billing API for real-time Spot pricing  
    # Requires: roles/billing.viewer (optional)
    billing_api: true

# Data sources configuration
data_sources:
  # Zone availability source:
  # - "api": Use real Compute Engine API (requires credentials)
  # - "estimated": Use static estimates (no credentials needed)
  zone_availability: "api"
  
  # Pricing source:
  # - "api": Use Cloud Billing Catalog API (public, no auth needed for basic)
  # - "estimated": Use calculated estimates based on GCP pricing model
  pricing: "api"

# API Configuration (optional)
api:
  # API key for Cloud Billing Catalog API (optional, increases quota)
  # Get from: https://console.cloud.google.com/apis/credentials
  billing_api_key: ""
  
  # Request timeout in seconds
  timeout: 30
  
  # Enable debug logging for API calls
  debug: false
